<script type="text/javascript">
    jQuery(function($) {
        var $goodsList = $('.xm-goods-list');

        $goodsList.on({
            'mouseenter': function() {
                $(this).addClass('active');
            },
            'mouseleave': function() {
                $(this).removeClass('active');
            }
        }, 'li');

        
    });
</script>